#!/usr/bin/env sh

##############################################################################
##
##  Gradle start up script for UN*X
##
##############################################################################

# Add default JVM options here. You can also use JAVA_OPTS and GRADLE_OPTS to pass JVM options to this script.
DEFAULT_JVM_OPTS='"-Xmx64m" "-Xms64m"'

APP_NAME="Gradle"
APP_BASE_NAME=`basename "$0"`

# Determine the Java command to use to start the JVM.
if [ -n "$JAVA_HOME" ] ; then
    if [ -x "$JAVA_HOME/bin/java" ] ; then
        JAVACMD="$JAVA_HOME/bin/java"
    else
        JAVACMD="$JAVA_HOME/bin/java"
    fi
else
    JAVACMD="java"
fi

# Escape application args
save () {
    for i do printf %s\\n "$i" | sed "s/'/'\\\\''/g"; done
}

APP_ARGS=`save "$@"`

CLASSPATH=$APP_HOME/gradle/wrapper/gradle-wrapper.jar

# Collect all arguments for the java command
JAVA_CMD="$JAVACMD"
JAVA_CMD="$JAVA_CMD -Dorg.gradle.appname=$APP_BASE_NAME"
JAVA_CMD="$JAVA_CMD -classpath $CLASSPATH"
JAVA_CMD="$JAVA_CMD org.gradle.wrapper.GradleWrapperMain"

# Execute Gradle
exec sh -c "$JAVA_CMD $DEFAULT_JVM_OPTS $GRADLE_OPTS $JAVA_OPTS $APP_ARGS"
